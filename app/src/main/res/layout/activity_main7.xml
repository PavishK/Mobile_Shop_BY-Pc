<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1C2C7"
    tools:context=".MainActivity7">


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="monospace"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Order Summary"
        android:background="#E86E47"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Address"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginTop="140dp"/>

            <EditText
                android:id="@+id/number1"
                android:layout_marginTop="25dp"
                android:background="@drawable/input_field"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="  NAME"
                android:inputType="text" />
            <EditText
                android:id="@+id/number2"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_field"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="  PHONE NUMBER"
                android:inputType="numberDecimal" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="center">
                    <EditText
                        android:id="@+id/number3"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/input_field"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="PINCODE"
                        android:inputType="numberSigned"/>
                    <EditText
                        android:id="@+id/number4"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/input_field"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="STATE"
                        android:layout_marginLeft="35dp"
                        android:inputType="text" />
                </TableRow>
                <TableRow
                    android:gravity="center">
                    <EditText
                        android:id="@+id/number5"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/input_field"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="CITY"
                        android:inputType="numberSigned"/>
                    <EditText
                        android:id="@+id/number6"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/input_field"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:hint="LOCATION"
                        android:layout_marginLeft="35dp"
                        android:inputType="text" />
                </TableRow>
            </TableLayout>
            <EditText
                android:id="@+id/number7"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_field"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="  Road name.Area,Colony (Required)"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Type of address"
                android:textSize="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:gravity="center"
                    android:layout_marginTop="20dp">


                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/home_use"
                        android:background="@drawable/custom_button"/>

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_marginLeft="35dp"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_button"
                        app:srcCompat="@android:drawable/ic_dialog_map" />
                </TableRow>
            </TableLayout>

            <Button
                android:layout_width="330dp"
                android:layout_marginTop="20dp"
                android:id="@+id/buttonOrder1"
                android:layout_height="50dp"
                android:background="@drawable/custom_button"
                android:text="SAVE ADDRESS"
                android:textColor="#C1C2C7"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"

                android:background="@color/black"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Payment"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="40dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <RadioButton
                    android:layout_marginTop="20dp"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:text="  UPI"
                    android:textColor="#424243"
                    android:background="@drawable/input_field"
                    android:textSize="25dp"/>

                <RadioButton
                    android:layout_marginTop="20dp"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:text="  ATM/Debit/Credit.."
                    android:textColor="#424243"
                    android:background="@drawable/input_field"
                    android:textSize="25dp"/>


                <RadioButton
                    android:layout_marginTop="20dp"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:text="  Cash on delivery"
                    android:textColor="#424243"
                    android:background="@drawable/input_field"
                    android:textSize="25dp"/>
            </RadioGroup>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <Button
                        android:layout_width="200dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/buttonOrder3"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:text="CANCEL"
                        android:textColor="#C1C2C7"/>
                    <Button
                        android:layout_width="200dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/buttonOrder4"
                        android:layout_height="50dp"
                        android:background="@drawable/custom_button"
                        android:text="PLACE ORDER"
                        android:textColor="#C1C2C7"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>