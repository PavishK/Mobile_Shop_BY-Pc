<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categories">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp">

                <TableRow>

                    <Button
                        android:id="@+id/button_exp"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/categories_button"
                        android:text="🧮 calci"
                        android:textColor="#95959A"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/button_Low"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/categories_button"
                        android:text="💯 Low prize"
                        android:textColor="#95959A"
                        android:textSize="25dp" />
                </TableRow>
                <TableRow

                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/button_Medium"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/categories_button"
                        android:text="🆕 New"
                        android:textColor="#95959A"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/button_High"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/categories_button"
                        android:text="🔝 selling "
                        android:textColor="#95959A"
                        android:textSize="25dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>